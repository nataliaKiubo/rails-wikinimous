<div class="container">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <% @articles.each do |article| %>
        <article>
          <h2><%= link_to article.title, article_path(article) %></h2>
          <p><%= article.content[0..10] %></p>
        </article>
      <% end %>
    </div>
  </div>
</div>
